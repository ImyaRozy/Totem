<%= provide(:title, 'Sign Up') %>
<div ng-controller="SplashController">
	<div class="page-container">
		<div class="header">
			<div class="row">
				<div class="small-6 small-centered columns">
					<h1>Totem</h1>
				</div>
			</div>
		</div>

		<div class="row content-container">
			<%= form_for(resource, :html => {:class => "login-form"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  	<div class="row">
				    <div class="small-4 columns small-centered">
				     	<div class="row">
				      		<div class="small-4 columns">
				      			<label for="email" class="right inline">Email</label>
				      		</div>
				      		<div class="small-8 columns">
				      			<%= f.email_field :email, :autofocus => true %>
				      		</div>
				     	</div>
					    <div class="row">
					    	<div class="small-4 columns">
					      		<label for="password" class="right inline">Password</label>
					      	</div>
					      	<div class="small-8 columns">
					      		<%= f.password_field :password %>
					      	</div>
					    </div>
					    <div class="row">
					    	<div class="small-4 columns">
					      		<label for="password" class="right inline">Password Confirmation</label>
					      	</div>
					      	<div class="small-8 columns">
					      		<%= f.password_field :password_confirmation %>
					      	</div>
					    </div>
  						<div class="row">
  							<div class="small-8 small-offset-4 columns">
  								<%= f.submit "Create Account", :class => 'button' %>
  							</div>
					    </div>
					    <div class="row">
					    	<div class="small-8 small-offset-4 columns">
					    		<%= render "devise/shared/links" %>
					    	</div>
					    </div>
					    <div class="row">
					    	<div class="small-8 small-offset-4 columns">
					    		<%= devise_error_messages! %>
					    	</div>
					    </div>
				    </div>
			  	</div>
			<% end %>
		</div>
	</div>
</div>